@{
    ViewData["Title"] = "Add Student";
}

@model SAMS.Models.Users

<div class="page-wrapper">

    <div class="form-card">

        <!-- Header -->
        <div class="form-header">
            <h1>Add Student</h1>
            <p>Enter student information below</p>
        </div>

        <!-- Form -->
        <form asp-controller="Student" asp-action="AddStudent" method="post" class="form-body">

            <input asp-for="User_ID" type="hidden" />
            <input asp-for="id" type="hidden" />
            <input asp-for="Role" type="hidden" />
            <input asp-for="Pass" type="hidden" />
            <input asp-for="IsActive" type="hidden" />

            <div class="form-grid">

                <div class="form-group">
                    <label>First Name</label>
                    <input asp-for="FName" placeholder="Enter first name" />
                </div>

                <div class="form-group">
                    <label>Middle Name</label>
                    <input asp-for="MName" placeholder="Enter middle name" />
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <input asp-for="LName" placeholder="Enter last name" />
                </div>

                <div class="form-group">
                    <label>Gender</label>
                    <input asp-for="Gender" placeholder="Enter gender" />
                </div>

            </div>

            <div class="form-group email-group">
                <label>Email Address</label>
                <input asp-for="Email" placeholder="Enter email address" />
            </div>

            <div class="form-actions">
                <a asp-action="StudentPage" class="btn-secondary">Cancel</a>
                <button type="submit" class="btn-primary">Save Student</button>
            </div>

        </form>
    </div>
</div>

<style>

   

    body, html {
        margin: 0;
        height: 100%;
        font-family: "Segoe UI", Arial, sans-serif;
        background: #0f3d4f; /* deep teal background */
    }

    /* Page wrapper */
    .page-wrapper {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 80px 30px;
    }

    /* Card */
    .form-card {
        width: 100%;
        max-width: 980px;
        background: #fdf6e3; /* soft off-white */
        border-radius: 18px;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
        overflow: hidden;
    }

    /* Header */
    .form-header {
        background: #facc15; /* bright yellow */
        padding: 45px 55px;
        color: #1e293b; /* dark text */
    }

        .form-header h1 {
            margin: 0;
            font-size: 30px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .form-header p {
            margin-top: 8px;
            font-size: 15px;
            opacity: 0.9;
        }

    /* Form body */
    .form-body {
        padding: 55px;
        background-color: #fdf6e3; /* soft off-white */
    }

    /* Grid */
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px 45px;
    }

    /* Fields */
    .form-group {
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-size: 14px;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 8px;
        }

        .form-group input {
            width: 100%;
            padding: 14px 16px;
            border-radius: 10px;
            border: 1px solid #cbd5e1;
            font-size: 15px;
            background: #ffffff;
            transition: all 0.2s ease;
        }

            .form-group input:focus {
                outline: none;
                border-color: #0f3d4f; /* dark teal focus */
                box-shadow: 0 0 0 3px rgba(15, 61, 79, 0.2);
            }

    /* Email spacing */
    .email-group {
        margin-top: 35px;
    }

    /* Buttons */
    .form-actions {
        margin-top: 50px;
        display: flex;
        justify-content: flex-end;
        gap: 18px;
    }

    .btn-primary {
        background: #0f3d4f; /* dark teal button */
        color: white;
        border: none;
        padding: 14px 30px;
        border-radius: 10px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(15, 61, 79, 0.35);
        }

    .btn-secondary {
        background-color: #e5e7eb; /* light gray button */
        color: #1e293b;
        padding: 14px 30px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.2s ease;
    }

        .btn-secondary:hover {
            background-color: #d1d5db;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-grid

    {
        grid-template-columns: 1fr;
    }

    .form-body {
        padding: 35px;
    }

    }
</style>



