@model SAMS.Models.Users

<form asp-controller="Teacher" asp-action="EditTeacher" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="User_ID" type="hidden">
    <input asp-for="id" type="hidden">
    <input asp-for="Role" type="hidden">
    <input asp-for="Pass" type="hidden">
    <input asp-for="IsActive" type="hidden">

    <input asp-for="FName" type="text" placeholder="First Name">
    <input asp-for="MName" type="text" placeholder="Middle Name">
    <input asp-for="LName" type="text" placeholder="Last Name">
    <input asp-for="Gender" type="text" placeholder="Gender">
    <input asp-for="Email" type="text" placeholder="Email">

    <button type="submit">Confirm</button>

</form>