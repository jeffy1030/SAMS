@{
    ViewData["Title"] = "Add Student";
}

@model SAMS.Models.Users

<div class="page-wrapper">

    <div class="outer-card">

        <!-- Header -->
        <div class="form-header">
            <div class="header-content">
                <button type="button" class="back-btn" onclick="window.location.href='@Url.Action("StudentPage", "Student")'" title="Go back">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="19" y1="12" x2="5" y2="12"></line>
                        <polyline points="12 19 5 12 12 5"></polyline>
                    </svg>
                </button>
                <h1>ADD NEW STUDENT</h1>
            </div>
        </div>

        <!-- Inner Beige Card -->
        <div class="inner-card">

            <form asp-controller="Student" asp-action="AddStudent" method="post" class="form-body">

                <input asp-for="User_ID" type="hidden" />
                <input asp-for="id" type="hidden" />
                <input asp-for="Role" type="hidden" />
                <input asp-for="Pass" type="hidden" />
                <input asp-for="IsActive" type="hidden" />

                <div class="form-group">
                    <label>First Name</label>
                    <input asp-for="FName" placeholder="Enter first name" />
                </div>

                <div class="form-group">
                    <label>Middle Name</label>
                    <input asp-for="MName" placeholder="Enter middle name" />
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <input asp-for="LName" placeholder="Enter last name" />
                </div>

                <div class="form-group">
                    <label>Gender</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Email Address</label>
                    <input asp-for="Email" placeholder="Enter email address" />
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">ADD STUDENT</button>
                </div>

            </form>

        </div>
    </div>
</div>

<style>
    body, html {
        margin: 0;
        height: 100%;
        font-family: "Segoe UI", Arial, sans-serif;
        background: #0D334C; /* softer navy background */
    }

    /* Outer card wrapper - WIDER ONLY */
    .outer-card {
        width: 100%;
        max-width: 1200px;
        margin: 50px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Header - adjusted for left alignment */
    .form-header {
        width: 100%;
        background: #FFEA4D; /* softer yellow */
        padding: 35px 40px;
        border-radius: 12px 12px 0 0;
        color: #285B3A;
        box-sizing: border-box;
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 16px;
        width: 100%;
    }

    .back-btn {
        background: transparent;
        border: none;
        color: #0D334C;
        cursor: pointer;
        padding: 6px;
        border-radius: 6px;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        line-height: 1;
    }

        .back-btn:hover {
            background: rgba(13, 51, 76, 0.1);
            color: #0D334C;
        }

        .back-btn svg {
            display: block;
            width: 20px;
            height: 20px;
        }

    .form-header h1 {
        margin: 0;
        font-size: 32px;
        font-weight: 700;
        letter-spacing: 0.5px;
        color: #285B3A;
    }

    /* Inner beige card - wider */
    .inner-card {
        width: 100%;
        background: #F9F7EE; /* beige card */
        padding: 40px 45px;
        border-radius: 0 0 12px 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    /* Form groups vertical */
    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 16px;
            font-weight: 600;
            color: #285B3A;
            margin-bottom: 6px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 14px 18px;
            border-radius: 10px;
            border: 1px solid #d1d5db;
            font-size: 16px;
            background: #ffffff;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
            transition: all 0.2s ease;
            box-sizing: border-box;
        }

        .form-group select {
            cursor: pointer;
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='%23285B3A' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><polyline points='6 9 12 15 18 9'/></svg>");
            background-repeat: no-repeat;
            background-position: right 18px center;
            background-size: 16px;
            padding-right: 50px;
        }

            .form-group input:focus,
            .form-group select:focus {
                outline: none;
                border-color: #50A868;
                box-shadow: 0 0 0 3px rgba(80,168,104,0.2);
            }

    /* Single button full width */
    .form-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .btn-primary {
        background: #50A868;
        color: white;
        border: none;
        padding: 16px 50px;
        border-radius: 10px;
        font-weight: 700;
        font-size: 17px;
        cursor: pointer;
        width: 100%;
        max-width: 350px;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(80,168,104,0.35);
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .outer-card {
            margin: 20px;
            max-width: 100%;
        }

        .form-header, .inner-card {
            padding: 25px 20px;
        }

        .header-content {
            gap: 12px;
        }

        .form-header h1 {
            font-size: 24px;
        }

        .btn-primary {
            max-width: 100%;
        }

        .form-group select {
            background-position: right 15px center;
            padding-right: 45px;
        }

        .back-btn {
            padding: 4px;
        }

            .back-btn svg {
                width: 18px;
                height: 18px;
            }
    }

    /* For very small screens */
    @@media (max-width: 480px) {
        .header-content {
            flex-wrap: wrap;
            justify-content: flex-start;
            text-align: left;
        }

        .form-header h1 {
            font-size: 22px;
            width: 100%;
        }

        .back-btn {
            padding: 4px;
        }
    }
</style>